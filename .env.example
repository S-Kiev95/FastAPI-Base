# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (for local development without Docker)
DATABASE_URL=sqlite:///./app.db

# PostgreSQL (for Docker or production)
# DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/fastapi_db

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_TITLE=FastAPI Base Template
API_VERSION=1.0.0
API_DESCRIPTION=FastAPI template with SQLModel and authentication

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json (structured) or text (human-readable)
# Use 'json' for production (parseable by log aggregators)
# Use 'text' for development (easier to read)
LOG_FORMAT=json

# Log file path (optional - leave empty to log only to stdout)
# Example: logs/app.log
LOG_FILE=

# =============================================================================
# AUTHENTICATION & AUTHORIZATION
# =============================================================================

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Storage Configuration (S3/MinIO)
# If not configured, files will be stored locally in MEDIA_FOLDER
USE_S3=False
S3_ENDPOINT_URL=http://localhost:9000  # MinIO endpoint (optional, leave empty for AWS S3)
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=media
S3_REGION=us-east-1

# Local storage (used when USE_S3=False)
MEDIA_FOLDER=./media
MAX_FILE_SIZE=10485760  # 10MB in bytes

# =============================================================================
# REDIS CONFIGURATION (Cache & Rate Limiting)
# =============================================================================

# Enable/disable Redis caching
REDIS_ENABLED=False

# Redis connection (for Docker or production)
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=  # Optional password

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600  # 1 hour

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=FastAPI App

# =============================================================================
# DOCKER & PRODUCTION VARIABLES
# =============================================================================

# PostgreSQL (used in docker-compose.yml)
POSTGRES_DB=fastapi_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Backend storage backend (local or s3)
STORAGE_BACKEND=local

# AWS S3 (for production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=my-bucket
